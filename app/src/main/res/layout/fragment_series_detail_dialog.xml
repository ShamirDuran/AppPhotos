<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.SeriesDetailDialogFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/navSeriesDialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Toolbar
            android:id="@+id/toolbarSeriesDialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/home" />
    </com.google.android.material.appbar.AppBarLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/rlSerieDialog"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/ivImagenSerieDialog"
                        android:layout_width="match_parent"
                        android:layout_height="360dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/loli" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="360dp"
                        android:alpha="0.6"
                        android:background="#050000" />

                    <TextView
                        android:id="@+id/tvNombreSerieDialog"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:gravity="center_horizontal"
                        android:letterSpacing="0.03"
                        android:shadowColor="#000"
                        android:shadowDx = "2"
                        android:shadowDy = "2"
                        android:shadowRadius = "1"
                        android:padding="16dp"
                        android:text="Titulo de la serie"
                        android:textColor="@color/fav"
                        android:textSize="25sp"
                        android:textStyle="bold" />
                </RelativeLayout>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:paddingStart="16dp"
                        android:paddingTop="10dp"
                        android:paddingEnd="16dp"
                        android:paddingBottom="10dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:letterSpacing="0.04"
                            android:text="DescripciÃ³n"
                            android:textColor="#000000"
                            android:textSize="24sp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:layout_marginTop="6dp"
                            android:layout_marginBottom="10dp"
                            android:background="@color/fav" />

                        <TextView
                            android:id="@+id/tvDescSerieDialog"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="Descripcion de la serie"
                            android:layout_marginBottom="10dp"
                            android:textColor="@color/colorTexto" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </ScrollView>
    </FrameLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>